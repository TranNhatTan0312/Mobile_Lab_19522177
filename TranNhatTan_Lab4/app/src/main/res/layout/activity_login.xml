<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_above="@+id/daugachduoi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile "
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lab "
            android:textSize="35dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/daugachduoi"
        android:layout_width="60dp"
        android:layout_height="6dp"
        android:layout_above="@+id/Inputusername"
        android:layout_marginBottom="104dp"
        android:background="@color/blue"
        android:layout_marginLeft="170dp"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/Inputusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="User name: "
        android:layout_above="@+id/LoginEditUsername"
        android:layout_marginBottom="0dp"
        android:gravity="left"
        android:paddingLeft="40dp">
    </TextView>

    <EditText
        android:id="@+id/LoginEditUsername"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/Phone"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:hint="Please enter Fullname"
        android:textSize="17dp">
    </EditText>

    <TextView
        android:id="@+id/Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Password: "
        android:layout_above="@+id/LoginEditPassword"
        android:layout_marginBottom="0dp"
        android:gravity="left"
        android:paddingLeft="40dp">
    </TextView>

    <EditText
        android:id="@+id/LoginEditPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/btn_Login"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:hint="EPlease enter Fullname"
        android:textSize="17dp">
    </EditText>


    <Button
        android:id="@+id/btn_Login"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/blue"
        android:text="Login"
        android:textSize="18dp"

        android:textAllCaps="false"
        android:layout_above="@+id/Register"
        android:layout_centerHorizontal="true"

        />


    <TextView
        android:id="@+id/Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="17dp"
        android:text="Don't have an account? Sign Up"
        android:layout_marginBottom="200dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>



